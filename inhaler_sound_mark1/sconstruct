import cuppa

cuppa.run(
    default_options = {
        'boost-version'             : "latest",
        'quince-location'           : "git+https://github.com/ja11sop/quince",
        'quince-postgresql-location': "git+https://github.com/ja11sop/quince_postgresql",
        'spdlog-location': 'git+https://github.com/gabime/spdlog.git',
        'spdlog-include' : 'include'
    },
    dependencies = {
        'spdlog': cuppa.header_library_dependency( 'spdlog' )
    },
    default_dependencies = [
        'boost',
        'quince',
        'quince-postgresql',
        'qt5',
        'spdlog'
    ]
)
