Import('env')

env.EnableQt5Modules( [
        'QtCore',
        'QtWidgets',
        'QtGui',
] )

sources = [
    env.Glob( 'application/*.cpp' ),
    env.Glob( 'qt_windows/*.cpp' ),
]

uifiles = [
        'qt_windows/login.ui',
        'qt_windows/patientdetails.ui',
        'qt_windows/administration.ui',
]

env.Uic5( uifiles )

env.Build( 'inhaler_sound', sources )

